<Window x:Class="Семестр2_ЛР4_Задание_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Семестр2_ЛР4_Задание_1"
        mc:Ignorable="d"
        Title="Обработка матрицы" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="SizeTextBox" HorizontalAlignment="Center" VerticalAlignment="Top" 
                 Width="100" Margin="0,20,0,0" HorizontalContentAlignment="Center"/>
        <Button Content="Создать матрицу" HorizontalAlignment="Center" VerticalAlignment="Top" 
                Width="150" Margin="0,60,0,0" Click="OnCreateMatrixButtonClick"/>

        <Button Content="Обработать матрицу" HorizontalAlignment="Center" VerticalAlignment="Top" 
                Width="150" Margin="0,100,0,0" Click="OnProcessButtonClick"/>

        <DataGrid x:Name="MatrixDataGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                  Margin="10,160,10,10" AutoGenerateColumns="True"/>
    </Grid>
</Window>
