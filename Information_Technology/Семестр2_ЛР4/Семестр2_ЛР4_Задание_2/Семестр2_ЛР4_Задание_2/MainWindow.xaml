<Window x:Class="Семестр2_ЛР4_Задание_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Семестр2_ЛР4_Задание_2"
        mc:Ignorable="d"
        Title="Вычисление площади треугольника" Height="300" Width="500">
    <Grid>
        <Label Content="Сторона a:" HorizontalAlignment="Left" 
               VerticalAlignment="Top" Margin="20,20,0,0"/>
        <TextBox Name="SideA" HorizontalAlignment="Left" 
                 VerticalAlignment="Top" Margin="100,20,0,0" Width="150"/>

        <Label Content="Сторона b:" HorizontalAlignment="Left" 
               VerticalAlignment="Top" Margin="20,70,0,0"/>
        <TextBox Name="SideB" HorizontalAlignment="Left" 
                 VerticalAlignment="Top" Margin="100,70,0,0" Width="150"/>

        <Label Content="Сторона c:" HorizontalAlignment="Left" 
               VerticalAlignment="Top" Margin="20,120,0,0"/>
        <TextBox Name="SideC" HorizontalAlignment="Left" 
                 VerticalAlignment="Top" Margin="100,120,0,0" Width="150"/>

        <Button Content="Вычислить площадь" HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="100,180,0,0" Width="150" Click="CalculateButton_Click"/>

        <TextBlock Name="ResultTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" 
                   Margin="269,182,0,0" Width="200"/>
    </Grid>
</Window>
