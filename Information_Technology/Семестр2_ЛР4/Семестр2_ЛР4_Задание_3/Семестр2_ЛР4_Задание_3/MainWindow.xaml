<Window x:Class="Семестр2_ЛР4_Задание_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Семестр2_ЛР4_Задание_3"
        mc:Ignorable="d"
        Title="Морской бой" Height="300" Width="400">
    <Grid>
        <Label Content="Введите два числа от 0 до 9:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0"/>

        <TextBox Name="FirstGuess" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,60,0,0" Width="50"/>
        <TextBox Name="SecondGuess" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,60,0,0" Width="50"/>

        <Button Content="Проверить" HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="25,99,0,0" Width="100" Click="CheckButton_Click"/>

        <TextBlock Name="ResultTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,148,0,0" Width="300"/>

    </Grid>
</Window>
